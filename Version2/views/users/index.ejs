<% if (loggedIn && currentUser.isAdmin) { %>
    <div class="w-75 m-auto">
        <a class="btn btn-primary" href="/users/create">Add</a>
    </div>
<% } %>
<table class="table w-75 m-auto">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th width="200px" scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    <% users.forEach(user => { %>
        <tr>
            <td><%= user.fullName %></td>
            <td><%= user.email %></td>
            <td>
                <a class="link-primary" href="<%= `/users/${user._id}` %>"> Detail </a>
                |
                <a class="link-primary" href="<%= `/users/${user._id}/edit` %>"> Edit </a>
                |
                <a
                        class="link-primary"
                        href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
                        onclick="return confirm('Are you sure you want to delete this record?')"
                >Delete</a
                >
            </td>
        </tr>
    <% }); %>

    </tbody>
</table>
