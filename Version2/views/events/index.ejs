<% if (loggedIn && currentUser.isAdmin) { %>

    <div class="w-75 m-auto">
        <a class="btn btn-primary" href="/events/create">Add</a>
    </div>
<% } %>
<table class="table w-75 m-auto">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Date</th>
        <th scope="col">Location</th>
        <th width="200px" scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    <% events.forEach(event => { %>
        <tr>
            <td><%= event.name %></td>
            <td><%= event.description %></td>
            <td><%= event.date.toISOString().slice(0, 10)
                %></td>
            <td><%= event.location %></td>

            <td>
                <a class="link-primary" href="<%= `/events/${event._id}` %>"> Detail </a>
                <% if (loggedIn && currentUser.isAdmin) { %>

                    |
                    <a class="link-primary" href="<%= `/events/${event._id}/edit` %>"> Edit </a>
                    |
                    <a
                            class="link-primary"
                            href="<%= `/events/${event._id}/delete?_method=DELETE` %>"
                            onclick="return confirm('Are you sure you want to delete this record?')"
                    >Delete</a
                    >
                <% } %>
            </td>
        </tr>
    <% }); %>

    </tbody>
</table>
