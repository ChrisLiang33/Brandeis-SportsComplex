<table class="table w-75 m-auto">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Title</th>
        <th scope="col">Issue</th>
        <th width="200px" scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    <% contacts.forEach(contact => { %>
        <tr>
            <td><%= contact.name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.title
                %></td>
            <td><%= contact.issue %></td>

            <td>
                <a class="link-primary" href="<%= `/contacts/${contact._id}` %>"> Detail </a>
                |
                <a
                        class="link-primary"
                        href="<%= `/contacts/${contact._id}/delete?_method=DELETE` %>"
                        onclick="return confirm('Are you sure you want to delete this record?')"
                >Delete</a
                >
            </td>
        </tr>
    <% }); %>

    </tbody>
</table>
