<% if (loggedIn && currentUser.isAdmin) { %>

    <div class="w-75 m-auto">
        <a class="btn btn-primary" href="/programs/create">Add</a>
    </div>
<% } %>
<table class="table w-75 m-auto">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Schedule</th>
        <th scope="col">Instructor</th>
        <th width="200px" scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    <% programs.forEach(program => { %>
        <tr>
            <td><%= program.name %></td>
            <td><%= program.description %></td>
            <td><%= program.schedule %></td>
            <td><%= program.instructor %></td>

            <td>
                <a class="link-primary" href="<%= `/programs/${program._id}` %>"> Detail </a>
                <% if (loggedIn && currentUser.isAdmin) { %>

                |
                <a class="link-primary" href="<%= `/programs/${program._id}/edit` %>"> Edit </a>
                |
                <a
                        class="link-primary"
                        href="<%= `/programs/${program._id}/delete?_method=DELETE` %>"
                        onclick="return confirm('Are you sure you want to delete this record?')"
                >Delete</a
                >
                <% } %>
            </td>
        </tr>
    <% }); %>

    </tbody>
</table>
