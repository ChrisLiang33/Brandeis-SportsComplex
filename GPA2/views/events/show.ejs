<div class="w-75 m-auto">
    <form>
        <h2>Event Details</h2>
        <div class="form-floating mb-2">
            <div class="form-control"><%= event.name %></div>
            <label for="inputName">Name</label>
        </div>
        <div class="form-floating mb-2">
            <div class="form-control"><%= event.description %></div>
            <label for="inputDescription">description</label>
        </div>
        <div class="form-floating mb-2">
            <div class="form-control"><%= event.date.toISOString().slice(0, 10) %></div>
            <label for="inputDate">date</label>
        </div>
        <div class="form-floating mb-2">
            <div class="form-control"><%= event.location %></div>
            <label for="inputLocation">location</label>
        </div>

    </form>
    <% if (loggedIn && currentUser.isAdmin) { %>

        <div class="mt-4">
            <a class="btn btn-primary" href="<%= `/events/${event._id}/edit` %>">Edit Event Details</a>
        </div>
    <% } %>
</div>



